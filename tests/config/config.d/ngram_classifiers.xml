<clickhouse>
    <ngram_classifiers>
        <ngram_classifier>
            <ngram_classifier_name>offensive</ngram_classifier_name>
            <ngram_classes>
                <ngram_class>
                    <ngram_class_name>positive</ngram_class_name>
                    <ngram_class_path>/etc/clickhouse-server/config.d/offensive-ngrams.txt</ngram_class_path>
                </ngram_class>
                <ngram_class>
                    <ngram_class_name>negative</ngram_class_name>
                    <ngram_class_path>/etc/clickhouse-server/config.d/non-offensive-ngrams.txt</ngram_class_path>
                </ngram_class>
            </ngram_classes>
        </ngram_classifier>
        <ngram_classifier>
            <ngram_classifier_name>offensive-utf8</ngram_classifier_name>
            <ngram_classes>
                <ngram_class>
                    <ngram_class_name>positive</ngram_class_name>
                    <ngram_class_path>/etc/clickhouse-server/config.d/offensive-ngrams-utf8.txt</ngram_class_path>
                </ngram_class>
                <ngram_class>
                    <ngram_class_name>negative</ngram_class_name>
                    <ngram_class_path>/etc/clickhouse-server/config.d/non-offensive-ngrams-utf8.txt</ngram_class_path>
                </ngram_class>
            </ngram_classes>
        </ngram_classifier>
    </ngram_classifiers>
</clickhouse>

